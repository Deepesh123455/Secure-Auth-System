{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*", "node_modules/*"]
    },

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Backend Specific */
    "lib": ["ESNext"],
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    
    /* Modern Node.js Optimization */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}